#!/bin/bash
#SBATCH -N 128
#SBATCH -C gpu
#SBATCH -G 512
#SBATCH -J W512C2
#SBATCH --mail-user=saurabhsawant@lbl.gov
#SBATCH --mail-type=ALL
#SBATCH -t 00:01:00
#SBATCH -A m3766_g
#SBATCH -o W512C2.o%j
#SBATCH -e W512C2.e%j
#SBATCH --reservation=weak_scaling_saurabh

#OpenMP settings:
export OMP_NUM_THREADS=1
