#!/bin/bash
#SBATCH -N 256
#SBATCH -C gpu
#SBATCH -G 1024
#SBATCH -J W1024C2
#SBATCH --mail-user=saurabhsawant@lbl.gov
#SBATCH --mail-type=ALL
#SBATCH -t 00:01:00
#SBATCH -A m3766_g
#SBATCH -o W1024C2.o%j
#SBATCH -e W1024C2.e%j
