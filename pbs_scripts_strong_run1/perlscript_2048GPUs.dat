#!/bin/bash
#SBATCH -N 512
#SBATCH -C gpu
#SBATCH -G 2048
#SBATCH -J S2048C1
#SBATCH --mail-user=saurabhsawant@lbl.gov
#SBATCH --mail-type=ALL
#SBATCH -t 00:02:00
#SBATCH -A m3766_g
#SBATCH -o S2048C1.o%j
#SBATCH -e S2048C1.e%j
#SBATCH --reservation=weak_scaling_saurabh

#OpenMP settings:
export OMP_NUM_THREADS=1
