srun -n 2048 -c 32 --cpu_bind=cores -G 2048 --gpu-bind=single:1  ./../Bin/main3d.gnu.TPROF.MTMPI.CUDA.GPUCLOCK.ex ../Examples/Tests/strong_scaling/periodicBox_2048GPUs
