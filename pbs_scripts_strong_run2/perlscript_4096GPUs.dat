#!/bin/bash
#SBATCH -N 1024
#SBATCH -C gpu
#SBATCH -G 4096
#SBATCH -J S4096C2
#SBATCH --mail-user=saurabhsawant@lbl.gov
#SBATCH --mail-type=ALL
#SBATCH -t 00:02:00
#SBATCH -A m3766_g
#SBATCH -o S4096C2.o%j
#SBATCH -e S4096C2.e%j
#SBATCH --reservation=weak_scaling_saurabh

#OpenMP settings:
export OMP_NUM_THREADS=1
export OMP_PLACES=threads
export OMP_PROC_BIND=true

#run the application:
#applications may performance better with --gpu-bind=none instead of --gpu-bind=single:1 
srun -n 4096 -c 32 --cpu_bind=cores -G 4096 --gpu-bind=single:1  ./../Bin/main3d.gnu.TPROF.MTMPI.CUDA.GPUCLOCK.ex ../Examples/Tests/strong_scaling/periodicBox_4096GPUs
